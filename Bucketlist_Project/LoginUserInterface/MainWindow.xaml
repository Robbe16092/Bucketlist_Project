<Window x:Class="LoginUserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginUserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <TextBox x:Name="txtGebruikersnaam" Background="Transparent" BorderBrush="Black" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Height="35" Margin="299,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtWachtwoord" Background="Transparent" BorderBrush="Black" BorderThickness="0,0,0,2" HorizontalAlignment="Left" Height="35" Margin="299,148,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="Voer uw gebruikersnaam in:" HorizontalAlignment="Left" Height="28" Margin="299,62,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Voer uw wachtwoord in:" HorizontalAlignment="Left" Height="28" Margin="299,130,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="btnLogin" Content="Log me in" HorizontalAlignment="Left" Height="32" Margin="299,233,0,0" VerticalAlignment="Top" Width="175" Click="BtnLogin_Click"/>

    </Grid>
</Window>
